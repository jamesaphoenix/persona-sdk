{
  "name": "@persona-sdk/runtime-tests",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "node -e \"if (process.env.CI === 'true') { console.log('Skipping runtime tests in CI environment (no API access)'); process.exit(0); }\" && node --loader ./loader.js src/index.js",
    "test:record": "CASSETTE_MODE=record node --loader ./loader.js src/index.js",
    "test:replay": "CASSETTE_MODE=replay node --loader ./loader.js src/index.js",
    "test:watch": "nodemon --watch src --watch ../../packages/persona-sdk/src -e js,ts src/index.js",
    "generate-signatures": "node src/signature-generator.js",
    "clean-cassettes": "rm -rf cassettes/*.json && rm -rf signatures/*.json"
  },
  "dependencies": {
    "@jamesaphoenix/persona-sdk": "workspace:*",
    "chalk": "^5.3.0",
    "crypto": "^1.0.1",
    "diff": "^7.0.0",
    "dotenv": "^16.5.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.1.1",
    "p-limit": "^6.1.0",
    "tape": "^5.9.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.1",
    "@types/node": "^22.5.2",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.3"
  }
}