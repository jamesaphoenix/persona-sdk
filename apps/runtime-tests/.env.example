# OpenAI API Key (required for recording mode)
OPENAI_API_KEY=

# Cassette mode: "record" or "replay" (default: replay)
CASSETTE_MODE=replay

# Show verbose output
VERBOSE=false

# Show cassette statistics
SHOW_STATS=true

# Clean expired cassettes (older than 30 days)
CLEAN_EXPIRED=false

# Allow fallback to real API if cassette not found
ALLOW_FALLBACK=false