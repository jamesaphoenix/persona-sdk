{
  "name": "@jamesaphoenix/persona-sdk-workspace",
  "version": "0.4.1",
  "private": true,
  "scripts": {
    "build": "cd packages/persona-sdk && pnpm build",
    "test": "cd packages/persona-sdk && pnpm test",
    "test:coverage": "cd packages/persona-sdk && pnpm test:coverage",
    "test:watch": "cd packages/persona-sdk && pnpm test:watch",
    "type-check": "cd packages/persona-sdk && pnpm type-check",
    "clean": "cd packages/persona-sdk && pnpm clean",
    "runtime:test": "cd apps/runtime-tests && pnpm test",
    "runtime:test:record": "cd apps/runtime-tests && CASSETTE_MODE=record pnpm test",
    "docs:dev": "cd apps/docs && pnpm dev",
    "docs:build": "cd apps/docs && pnpm build",
    "docs:preview": "cd apps/docs && pnpm preview"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^3.2.3",
    "prettier": "^3.4.2",
    "typescript": "5.7.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "packageManager": "pnpm@10.10.0"
}