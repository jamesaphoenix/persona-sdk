{
  "name": "@jamesaphoenix/persona-sdk",
  "version": "0.3.0",
  "description": "TypeScript SDK for generating personas from statistical distributions",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:stress": "vitest run tests/adapters/postgres/stress-test.ts",
    "test:integration": "vitest run tests/integration/",
    "build": "tsc --build",
    "clean": "rm -rf dist coverage docs",
    "type-check": "tsc --noEmit",
    "docs": "DISPLAY= BROWSER=none typedoc --logLevel Error",
    "docs:watch": "typedoc --watch"
  },
  "dependencies": {
    "@langchain/core": "^0.3.59",
    "@langchain/openai": "^0.1.0",
    "langchain": "^0.3.0",
    "mime-types": "^3.0.1",
    "openai": "^4.70.0",
    "random-js": "^2.1.0",
    "simple-statistics": "^7.8.0",
    "tiktoken": "^1.0.21",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "@prisma/client": "^5.0.0",
    "@supabase/supabase-js": "^2.0.0",
    "fastify": "^5.0.0",
    "fastify-type-provider-zod": "^2.0.0",
    "pg": "^8.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@fastify/cors": {
      "optional": true
    },
    "@fastify/swagger": {
      "optional": true
    },
    "@fastify/swagger-ui": {
      "optional": true
    },
    "@prisma/client": {
      "optional": true
    },
    "@supabase/supabase-js": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "fastify-type-provider-zod": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@fastify/cors": "^10.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.0.0",
    "@types/react": "^18.3.23",
    "@vitest/coverage-v8": "^3.2.3",
    "dotenv": "^16.0.3",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^2.0.0",
    "react": "^19.1.0",
    "typedoc": "^0.26.0",
    "typescript": "5.7.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "persona",
    "audience",
    "generation",
    "statistics",
    "distributions",
    "ai",
    "typescript",
    "sdk"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesaphoenix/persona-sdk"
  },
  "bugs": {
    "url": "https://github.com/jamesaphoenix/persona-sdk/issues"
  },
  "homepage": "https://github.com/jamesaphoenix/persona-sdk#readme",
  "publishConfig": {
    "access": "public"
  }
