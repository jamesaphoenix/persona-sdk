{
  "name": "@jamesaphoenix/persona-sdk",
  "version": "0.2.0",
  "description": "TypeScript SDK for generating personas from statistical distributions",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsc --build",
    "clean": "rm -rf dist coverage docs",
    "type-check": "tsc --noEmit",
    "docs": "DISPLAY= BROWSER=none typedoc --logLevel Error",
    "docs:watch": "typedoc --watch"
  },
  "dependencies": {
    "@langchain/core": "^0.3.59",
    "@langchain/openai": "^0.1.0",
    "langchain": "^0.3.0",
    "mime-types": "^3.0.1",
    "openai": "^4.70.0",
    "random-js": "^2.1.0",
    "simple-statistics": "^7.8.0",
    "tiktoken": "^1.0.21",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^3.2.3",
    "dotenv": "^16.0.3",
    "typedoc": "^0.26.0",
    "typescript": "5.7.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "persona",
    "audience",
    "generation",
    "statistics",
    "distributions",
    "ai",
    "typescript",
    "sdk"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesaphoenix/persona-sdk"
  },
  "bugs": {
    "url": "https://github.com/jamesaphoenix/persona-sdk/issues"
  },
  "homepage": "https://github.com/jamesaphoenix/persona-sdk#readme",
  "publishConfig": {
    "access": "public"
  }
}