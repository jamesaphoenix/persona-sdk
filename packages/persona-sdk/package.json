{
  "name": "@internal/persona-sdk-minimal",
  "version": "1.0.0",
  "description": "Minimal TypeScript SDK for generating personas with AI-powered features",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsc --build",
    "clean": "rm -rf dist coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@langchain/core": "^0.3.59",
    "@langchain/openai": "^0.1.0",
    "openai": "^4.70.0",
    "random-js": "^2.1.0",
    "simple-statistics": "^7.8.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/random-js": "^2.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "typescript": "5.7.3",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "persona",
    "ai",
    "openai",
    "structured-output",
    "typescript"
  ],
  "private": true,
  "engines": {
    "node": ">=20"
  }
}