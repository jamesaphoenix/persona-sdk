{
  "name": "@persona-sdk/prompt-optimizer",
  "version": "0.1.0",
  "description": "A TypeScript package for optimizing prompts using techniques inspired by DSPy",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:vitest": "vitest run --config vitest.config.mjs",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "docs": "DISPLAY= BROWSER=none typedoc --logLevel Error",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "prompt",
    "optimization",
    "llm",
    "ai",
    "typescript",
    "dspy",
    "machine-learning",
    "langchain"
  ],
  "author": "James Phoenix <jamesaphoenix@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesaphoenix/persona-sdk.git",
    "directory": "packages/prompt-optimizer"
  },
  "bugs": {
    "url": "https://github.com/jamesaphoenix/persona-sdk/issues"
  },
  "homepage": "https://github.com/jamesaphoenix/persona-sdk/tree/main/packages/prompt-optimizer#readme",
  "dependencies": {
    "@langchain/core": "^0.3.24",
    "@langchain/openai": "^0.3.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^8.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "@langchain/core": ">=0.3.0",
    "@langchain/openai": ">=0.3.0"
  }
}